BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX_DIR=$4

# put code in <deps>/<index>

cp $ROOT_DIR/lib/eureka_registrar.py $DEPS_DIR/$INDEX_DIR

# startup script goes into <deps>/<index>/profile.d
# final build pack *should* copy it into $HOME/profile.d 

mkdir -p $DEPS_DIR/$INDEX_DIR/profile.d

# replace %APP_DIR% in startup script with path to 
# python file copied into deps/<index>

sed "s/%APP_DIR%/~\/deps\/$INDEX_DIR/g" $ROOT_DIR/lib/eureka_registrar.sh > $DEPS_DIR/$INDEX_DIR/profile.d/eureka_registrar.sh
chmod +x $DEPS_DIR/$INDEX_DIR/profile.d/eureka_registrar.sh

